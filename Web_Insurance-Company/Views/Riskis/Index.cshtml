@model IEnumerable<Insurance_Company.Models.Riski>

@{
    ViewData["Title"] = "Риски — ";
}

<h1>Риски</h1>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naimenovanie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opisanie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SrednyayaVeroyatnost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naimenovanie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opisanie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SrednyayaVeroyatnost)
            </td>
            <td style="color: lightgray">
                <a asp-action="Edit" asp-route-id="@item.KodRiska"><font color="green">Редактировать</font></a> |
                <a asp-action="Details" asp-route-id="@item.KodRiska">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.KodRiska"><font color="FireBrick">Удалить</font></a>
            </td>
        </tr>
}
    </tbody>
</table>
