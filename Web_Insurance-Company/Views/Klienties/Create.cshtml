@model Insurance_Company.Models.Klienty

@{
    ViewData["Title"] = "Создание — ";
}

<h1>Создание</h1>
<br>
<h4>Клиенты</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KodKlienta" class="control-label"></label>
                <input asp-for="KodKlienta" class="form-control" />
                <span asp-validation-for="KodKlienta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fio" class="control-label"></label>
                <input asp-for="Fio" class="form-control" />
                <span asp-validation-for="Fio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataRozhdeniya" class="control-label"></label>
                <input asp-for="DataRozhdeniya" class="form-control" />
                <span asp-validation-for="DataRozhdeniya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pol" class="control-label"></label>
                <input asp-for="Pol" class="form-control" />
                <span asp-validation-for="Pol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres" class="control-label"></label>
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasportnyeDannye" class="control-label"></label>
                <input asp-for="PasportnyeDannye" class="form-control" />
                <span asp-validation-for="PasportnyeDannye" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KodGruppy" class="control-label"></label>
                <select asp-for="KodGruppy" class ="form-control" asp-items="ViewBag.KodGruppy"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
