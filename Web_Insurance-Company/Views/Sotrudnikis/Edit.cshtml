@model Insurance_Company.Models.Sotrudniki

@{
    ViewData["Title"] = "Редактирование — ";
}

<h1>Редактирование</h1>

<h4>Сотрудники</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KodSotrudnika" />
            <div class="form-group">
                <label asp-for="Fio" class="control-label"></label>
                <input asp-for="Fio" class="form-control" />
                <span asp-validation-for="Fio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataRozdeniya" class="control-label"></label>
                <input asp-for="DataRozdeniya" class="form-control" />
                <span asp-validation-for="DataRozdeniya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pol" class="control-label"></label>
                <input asp-for="Pol" class="form-control" />
                <span asp-validation-for="Pol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres" class="control-label"></label>
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasportnyeDannye" class="control-label"></label>
                <input asp-for="PasportnyeDannye" class="form-control" />
                <span asp-validation-for="PasportnyeDannye" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KodDolzhnosti" class="control-label"></label>
                <select asp-for="KodDolzhnosti" class="form-control" asp-items="ViewBag.KodDolzhnosti"></select>
                <span asp-validation-for="KodDolzhnosti" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
